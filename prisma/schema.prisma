generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  username      String
  email         String
  password      String
  image         String
  role          Role            @default(USER)
  socialLinks   String[]
  workingOnJobs WorkingOnJobs[] @relation("WorkingOnJobs")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

enum JobWorkingStatus {
  POSTED
  WORKING //on start
  IN_REVIEW // can edit
  APPROVED //no edit
  NOT_APPROVED //no edit
}

model WorkingOnJobs {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  userId    String           @db.ObjectId 
  jobId     String           @db.ObjectId 
  status    JobWorkingStatus @default(POSTED)
  delievery String           @default("")
  job       Job              @relation("WorkingOnJobs", fields: [jobId], references: [id])
  user      User             @relation("WorkingOnJobs", fields: [userId], references: [id])
  createdAt DateTime         @default(now())

  updatedAt DateTime @updatedAt
  @@unique([jobId, userId])
}

model Job {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title         String
  description   String
  acceptance    String
  status        Status
  minCompJobs   Int             @default(0)
  bounty        Int             @default(0)
  bountyActive  Boolean         @default(false)
  workingOnJobs WorkingOnJobs[] @relation("WorkingOnJobs")
  due           Int //hours

  level Level

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  OPEN
  CLOSED
}

enum Level {
  BEGINNER
  INTERMEDIATE
  EXPERT
}
